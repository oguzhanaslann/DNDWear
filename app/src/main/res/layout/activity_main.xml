<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="128dp"
        android:layout_height="264dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_group_64"
        app:tint="@color/black_alpha_25" />

    <ImageView
        android:id="@+id/hat_imageView"
        android:layout_width="56dp"
        android:layout_height="64dp"
        android:layout_marginTop="-24dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/body_imageView"
        android:layout_width="78dp"
        android:layout_height="64dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="2dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/panths_imageView"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/body_imageView"
        app:tint="@color/black" />


    <ImageView
        android:id="@+id/hat_image"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_hat"
        app:layout_constraintBottom_toBottomOf="@+id/body_image"
        app:layout_constraintEnd_toStartOf="@+id/body_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:tint="@color/black" />


    <ImageView
        android:id="@+id/body_image"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_body"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/panths_image"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/hat_image"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/panths_image"
        android:layout_width="0dp"
        android:layout_height="128dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_panths"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/body_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/body_image"
        app:layout_constraintTop_toTopOf="@+id/body_image"
        app:tint="@color/black"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/body_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/ic_baseline_swipe_vertical_24" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Long press the chlothes and drag them to person"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />



</androidx.constraintlayout.widget.ConstraintLayout>
